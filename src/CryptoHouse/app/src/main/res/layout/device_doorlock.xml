<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF1A1A1A"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/device_header" />

        <LinearLayout
            android:id="@+id/genericDeviceView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/doorlockLockButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:foreground="@drawable/baseline_lock_outline_24"
                    android:foregroundGravity="center" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2">

                    <ImageView
                        android:id="@+id/doorlockStatusImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:srcCompat="@drawable/unknown" />

                    <ImageView
                        android:id="@+id/doorlockBatteryImage"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:visibility="gone"
                        app:srcCompat="@drawable/baseline_battery_1_bar_24" />
                </RelativeLayout>

                <Button
                    android:id="@+id/doorlockUnlockButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:foreground="@drawable/baseline_lock_open_24"
                    android:foregroundGravity="center" />
            </LinearLayout>

            <com.ncorti.slidetoact.SlideToActView
                android:id="@+id/doorlockOpenSlide"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_marginHorizontal="30dp"
                android:elevation="8dp"
                android:foreground="@drawable/baseline_login_24"
                android:foregroundGravity="center"
                android:foregroundTint="#CECECE"
                app:area_margin="-8dp"
                app:bump_vibration="200"
                app:icon_margin="8dp"
                app:inner_color="@color/colorAccent"
                app:outer_color="@color/material_dynamic_neutral20"
                app:slider_icon_color="@color/darkGray"
                app:text="" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>