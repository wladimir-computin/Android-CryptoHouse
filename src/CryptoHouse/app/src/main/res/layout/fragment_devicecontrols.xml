<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/devices_controls_hint"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:maxLines="4"
        android:padding="10dp"
        android:text="@string/devices_controls_hint"
        android:visibility="gone" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/devices_controls_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/devices_controls_tabLayout"
        android:layout_alignParentTop="true"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/devices_controls_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#CD000000" />

</RelativeLayout>
