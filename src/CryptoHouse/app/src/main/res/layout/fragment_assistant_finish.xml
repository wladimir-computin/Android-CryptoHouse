<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#191919">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_above="@id/connectbutton_rl_layout"
        android:gravity="center"
        android:maxLines="3"
        android:padding="20dp"
        android:text="@string/assistant_label_3"
        app:autoSizeMinTextSize="20sp"
        app:autoSizeTextType="uniform" />

    <RelativeLayout
        android:id="@+id/connectbutton_rl_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <de.wladimircomputin.cryptohouse.ui.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:padding="50dp"
            android:translationZ="10dp">

            <Button
                android:id="@+id/assistant_finish_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="0dp"
                android:padding="50dp"
                android:background="@drawable/circle_button"
                android:text="@string/finish"
                android:textColor="@color/colorAccent"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </de.wladimircomputin.cryptohouse.ui.SquareLayout>

        <de.wladimircomputin.cryptohouse.ui.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentBottom="false"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:padding="50dp"
            android:translationZ="10dp">

            <ProgressBar
                android:id="@+id/assistant_finish_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentBottom="false"
                android:layout_weight="1"
                android:indeterminate="true"
                android:indeterminateBehavior="cycle"
                android:translationZ="20dp"
                android:visibility="gone" />

        </de.wladimircomputin.cryptohouse.ui.SquareLayout>
    </RelativeLayout>
    </RelativeLayout>