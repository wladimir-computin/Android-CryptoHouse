<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FF1A1A1A"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1AFFFFFF">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/name_edittext"
                android:layout_marginStart="5dp"
                android:layout_width="0dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/delete_button"
                android:ems="3"
                android:text="Name"
                android:hint="@string/name"
                android:inputType="textPersonName" />

        <Button
            android:id="@+id/delete_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/clone_button"
            android:background="@android:drawable/ic_menu_delete"
            android:backgroundTint="#FF0000"
            android:backgroundTintMode="multiply" />

        <Button
            android:id="@+id/clone_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/drag_image"
            android:background="@drawable/ic_baseline_content_copy_24"
            android:backgroundTint="@color/colorAccent"
            android:backgroundTintMode="multiply" />

        <ImageView
            android:id="@+id/drag_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/ic_baseline_drag_handle_24" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/devicemanager_arrowView"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:alpha="0.5"
            android:padding="5dp"
            android:paddingTop="10dp"
            android:layout_alignParentEnd="true"
            app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="5dp"
                android:paddingTop="5dp"
                android:visibility="visible"
                android:orientation="vertical">


                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingVertical="5dp">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/devicemanager_hostname_label2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="20dp"
                            android:gravity="center_vertical"
                            android:paddingEnd="5dp"
                            android:text="Hostname:"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/devicemanager_hostname_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="20dp"
                            android:gravity="center_vertical"
                            android:text="TestDevice"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:layout_editor_absoluteX="73dp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/devicemanager_mac_label2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="20dp"
                            android:gravity="center_vertical"
                            android:paddingEnd="5dp"
                            android:text="MAC:"
                            app:layout_constraintStart_toStartOf="parent"
                            tools:layout_editor_absoluteY="20dp" />

                        <TextView
                            android:id="@+id/devicemanager_mac_textview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:height="20dp"
                            android:gravity="center_vertical"
                            android:text="AA:BB:CC:DD:EE:FF"
                            tools:layout_editor_absoluteX="38dp"
                            tools:layout_editor_absoluteY="20dp" />
                    </TableRow>

                </TableLayout>

                <LinearLayout
                    android:id="@+id/devicemanager_device_settings_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp"
                    android:visibility="visible">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp">

                        <TextView
                            android:id="@+id/devicemanager_type_label"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_alignParentStart="true"
                            android:height="10dp"
                            android:gravity="center_vertical"
                            android:paddingStart="5dp"
                            android:text="@string/device_type"
                            app:autoSizeTextType="uniform" />

                        <Spinner
                            android:id="@+id/devicetype_spinner"
                            android:layout_width="200dp"
                            android:layout_height="0dp"
                            android:layout_below="@id/devicemanager_type_label"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentBottom="true" />
                    </RelativeLayout>


                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/device_password"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/devpass_edittext"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="3"
                            android:inputType="textPassword" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <LinearLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="@string/domain_ip">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/host_edittext"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ems="3"
                                android:inputType="textPersonName" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <Button
                            android:id="@+id/device_item_scan_button"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/ic_baseline_find_replace_24"
                            android:backgroundTint="@color/colorAccent"
                            android:backgroundTintMode="multiply" />

                    </LinearLayout>

                    <CheckBox
                        android:id="@+id/device_item_ip_auto_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layoutDirection="rtl"
                        android:paddingVertical="10dp"
                        android:text="@string/auto_ip_refresh" />

                </LinearLayout>

            </LinearLayout>

    </RelativeLayout>


</LinearLayout>